    <ContentPage.Content>
        <Grid VerticalOptions="Center" HorizontalOptions="Center">
            <Frame CornerRadius="20" Padding="20" BackgroundColor="White" HasShadow="True">
                <StackLayout>
                    <Label Text="Cadastro de matÃ©ria-prima" 
