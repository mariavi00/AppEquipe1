<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEquipe1.MainPage"
             Title="Empresa">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <!-- Circulo com a palavra 'Empresa' -->
            <Frame WidthRequest="100" HeightRequest="100" 
                   BackgroundColor="White" 
                   CornerRadius="50" 
                   HorizontalOptions="Center">
                <Label Text="Empresa" 
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Frame>

            <!-- Botões -->
            <Button Text="Controle de clientes" 
                    HorizontalOptions="FillAndExpand"/>
            <Button Text="Controle de fornecedores" 
                    HorizontalOptions="FillAndExpand"/>
            <Button Text="Controle de estoques" 
                    HorizontalOptions="FillAndExpand"/>
            <Button Text="Controle de produção" 
                    HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </ScrollView>
    
</ContentPage>

