<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEquipe1.CadastroFornecedor">

    <Grid>
         <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
         </Grid.RowDefinitions>

        <Label
            Text="Cadastro de fornecedor"
            FontSize="24"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="0,0,0,20"
            Grid.Row="0" />

        <Label
            Text="Nome:"
            Grid.Row="1"
            Margin="60,15,20,20"/>

        <Label
            Text="Telefone:"
            Grid.Row="2"
            Margin="45,15,20,20"/>

        <Label
            Text="Matéria Prima:"
            Grid.Row="3"
            Margin="15,15,20,20"/>    

        <Entry
            x:Name="NomeEntry"
            Margin="0,0,0,10"
            WidthRequest="200"
            HeightRequest="40"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Grid.Row="1" />

        <Entry
            x:Name="TelefoneEntry"
            Margin="0,0,0,10"
            WidthRequest="200"
            HeightRequest="40"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Grid.Row="2" />

        <Entry
            x:Name="MateriaPrimaEntry"
            Margin="0,0,0,20"
            WidthRequest="200"
            HeightRequest="40"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Grid.Row="3" />

        <Button
            Text="Salvar"
            BackgroundColor="Green"
            TextColor="White"
            WidthRequest="100"
            HeightRequest="40"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Clicked="SalvarFoiClicado"
            Margin="0,0,0,10"
            Grid.Row="4"/>

        <Button
            Text="Cancelar"
            BackgroundColor="White"
            TextColor="Black"
            WidthRequest="100"
            HeightRequest="40"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Clicked="CancelarClicado"
            Grid.Row="5"/>

        <Frame  x:Name="frameSalvar"
                IsVisible="False"
                CornerRadius="30"
                VerticalOptions="Center"
                BackgroundColor="White"
                BorderColor="Black"
                HorizontalOptions="Center"
                Grid.Row="1"
                Grid.RowSpan="2">
        <Grid>
         <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
         </Grid.RowDefinitions>

         <Label Text="Dados salvos com sucesso!"
                Margin="10"
                Grid.Row="0"/>

         <Button Text="OK!"
                 CornerRadius="10"
                 Clicked="BotaoOkClicado"
                 Grid.Row="1"/>

        </Grid>
       </Frame>

       <Frame  x:Name="frameCancelar"
                IsVisible="False"
                CornerRadius="20" 
                Padding="20" 
                BackgroundColor="White" 
                HasShadow="True"
                Grid.Row="1"
                Grid.RowSpan="3">
                    
                <StackLayout HorizontalOptions="Center">

                    <Label Text="Tem certeza que deseja cancelar?" 
                           HorizontalOptions="Center" 
                           FontSize="Large" 
                           Margin="0,0,0,20" />

                    <StackLayout Orientation="Horizontal" 
                                 HorizontalOptions="Center" 
                                 Margin="0,0,0,20">

                        <Button Text="SIM" 
                                Clicked="SimCancelarClicado"
                                BackgroundColor="White" 
                                TextColor="Black" 
                                BorderColor="Black" 
                                BorderWidth="1"
                                Margin="0,10,10,0" />

                        <Button Text="NÃO" 
                                Clicked="NaoCancelarClicado"
                                BackgroundColor="Red" 
                                TextColor="White" 
                                BorderColor="Black" 
                                BorderWidth="1"
                                Margin="0,10,10,0"/>
                    </StackLayout>
                </StackLayout>
            </Frame>


    </Grid>

    

</ContentPage>
